{
  "name": "notepro",
  "private": true,
  "version": "1.0.0",
  "description": "Workspace produktivitas offline untuk Windows dengan Kanban, Table, Toggle, dan Todo",
  "author": "NotePro Team",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npx wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build && electron-builder --windows",
    "start": "electron .",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css}\""
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sql.js": "^1.11.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^30.5.1",
    "electron-builder": "^25.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.notepro.app",
    "productName": "NotePro",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "dir",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "files": [
      "dist/**/*",
      "src/main.js",
      "src/preload.js"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      }
    ]
  }
}